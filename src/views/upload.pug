extends base.pug

block content
    if errorMessage 
        span=errorMessage
    form(action="/videos/upload",method="POST")
        label(for="video") 동영상
        input(type="file",accept="video/*",required,id="video",name="video")
        input(placeholder="Title",required,type="text",name="title",maxlength=25)
        input(placeholder="Description",required,type="text",name="description",maxlength=75)
        input(placeholder="separate by coma",required,type="text",name="hashtags",maxlength=25)
        input(value="Upload Video", type="submit")