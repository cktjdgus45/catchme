extends base.pug

block content
    if errorMessage 
        span=errorMessage
    form(method="POST",enctype="multipart/form-data").upload__form
        label(for="video") 비디오
        input(type="file",accept="video/*",required,id="video",name="video")
        input(placeholder="Title",required,type="text",name="title",maxlength=25,autocomplete="off")
        input(placeholder="Description",required,type="text",name="description",maxlength=75,autocomplete="off")
        input(placeholder="separate by coma",required,type="text",name="hashtags",maxlength=25,autocomplete="off")
        input(value="Upload Video", type="submit")