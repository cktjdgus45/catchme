extends base.pug

block content 
    h1.title.is-1.has-text-grey.auth-title 
        i.fas.fa-user 
        span 비밀번호 변경
    .tabs.is-large 
        ul
            li.is-active
                a(href=`edit`) 내정보변경
            li
                a(href=`videos`) 동영상
            li
                a(href=`change-password`) 비밀번호 
    form(method="POST",autocomplete="off").auth__form
        .field 
            p.control.has-icons-left
                input.is-large.input(name="oldPassword",type="password",placeholder="기존 비밀번호",required,autocomplete="new-password")
                span.icon.is-small.is-left 
                    i.fas.fa-lock
        .field 
            p.control.has-icons-left
                input.is-large.input(name="newPassword",type="password",placeholder="새 비밀번호",required,autocomplete="new-password")
                span.icon.is-small.is-left 
                    i.fas.fa-key
        .field 
            p.control.has-icons-left
                input.is-large.input(name="newPasswordConfirmation",type="password",placeholder="새 비밀번호 재입력",required,autocomplete="new-password")
                span.icon.is-small.is-left 
                    i.fas.fa-key
        .field 
            p.control.has-icons-left
                input.button.is-large(type="submit" value=" 비밀번호 변경하기")
block scripts
    script(src="/assets/js/myProfile.js")
                