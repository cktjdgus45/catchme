extends base.pug

block content 
    h1.title.is-1.has-text-grey.auth-title 
        i.fas.fa-user 
        span JOIN
    form(method="POST",autocomplete="off").auth__form
        .field 
            p.control.has-icons-left
                input.input.is-large(name="email",type="email",placeholder="아이디(이메일)",required,autocomplete="off",autocapitalize="off")
                span.icon.is-small.is-left
                    i.fas.fa-envelope 

        .field 
            p.control.has-icons-left
                input.input.is-large(name="password",type="password",placeholder="비밀번호",required,autocomplete="new-password")
                span.icon.is-small.is-left
                    i.fas.fa-lock 

        .field 
            p.control.has-icons-left
                input.input.is-large(name="password2",type="password",placeholder="비밀번호 재입력",required,autocomplete="new-password")
                span.icon.is-small.is-left
                    i.fas.fa-key 

        .field 
            p.control.has-icons-left
                input.input.is-large(name="name",type="text",placeholder="이름",required,autocomplete="chrome-off")
                span.icon.is-small.is-left
                    i.fas.fa-user 

        .field 
            p.control.has-icons-left
                input.input.is-large(name="location",type="text",placeholder="직무",required,autocomplete="chrome-off")
                span.icon.is-small.is-left
                    i.fas.fa-location-arrow 
        .field 
            p.control 
                input.button.is-large(type="submit",value="회원가입")      
    div.social__auth
        h3.social__auth-devider
            span or sign in with
        ul.social__auth-links
            li 
                a(href="/users/github/start")
                    img(src="/img/github.png").github
            li 
                a(href="/users/kakao/start")
                    img(src="/img/kakaotalk.png").kakao
            li
                a(href="/users/naver/start")
                    img(src="/img/naver.png").naver
            li
                a(href="/users/google/start")
                    img(src="/img/google.png").google
        a(href="/login").social__auth__link-join I already have an account        
