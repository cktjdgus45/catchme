extends base.pug

block content 
    form(method="POST",autocomplete="off").auth__form
        input(name="email",type="email",placeholder="아이디(이메일)",required,autocomplete="off",autocapitalize="off")
        input(name="password",type="password",placeholder="비밀번호",required,autocomplete="new-password")
        input(name="password2",type="password",placeholder="비밀번호 재입력",required,autocomplete="new-password")
        input(name="name",type="text",placeholder="이름",required,autocomplete="chrome-off")
        input(name="location",type="text",placeholder="위치",required,autocomplete="chrome-off")
        input(type="submit",value="회원가입")      
    div.social__auth
        h3.social__auth-devider
            span or sign in with
        ul.social__auth-links
            li 
                a(href="/users/github/start")
                    img(src="/img/github.png").github
            li 
                a(href="/users/kakao/start")
                    img(src="/img/kakaotalk.png").kakao
            li
                a(href="/users/naver/start")
                    img(src="/img/naver.png").naver
            li
                a(href="/users/google/start")
                    img(src="/img/google.png").google
        a(href="/login").social__auth__link-join I already have an account        
