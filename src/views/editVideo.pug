extends base.pug

block content 
    h4 Change Title of video
    form(method="POST",action='edit')
        input(placeholder="Title",required,type="text",name="title",maxlength=25,value=video.title)
        input(placeholder="Description",required,type="text",name="description",maxlength=75,value=video.description)
        input(placeholder="separate by coma",required,type="text",name="hashtags",maxlength=25,value=video.hashtags.join())
        input(value="Save",type="submit")