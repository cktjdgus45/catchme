extends base.pug

block content 
    h1.title.is-1.has-text-grey.auth-title 
        i.fas.fa-cloud-upload-alt
        span 동영상 수정
    form(method="POST",action='edit',enctype="multipart/form-data").upload__form
        label.label(for="video") 동영상
        input.input.is-large(type="file",accept="video/*",required,id="video",name="video")
        input.input.is-large(placeholder="제목",required,type="text",name="title",maxlength=25,value=video.title)
        input.input.is-large(placeholder="설명",required,type="text",name="description",maxlength=75,value=video.description)
        input.input.is-large(placeholder="콤마로 구분됩니다",required,type="text",name="hashtags",maxlength=25,value=video.hashtags.join())
        input.button.is-large(value="저장하기",type="submit")